<div class = "main-header">
  <div class = "room-name">
    <%= link_to "room",""%>
  </div>
  <div class = "exit-button">
    <%= link_to "チャットを終了する",""%>
  </div>    
</div>
<div class = "main-chat">
  <div class = "message">
    <div class = "name-date">
      <div class = "name">
        Tom
      </div>
      <div class = "date">
        2020/3/31
      </div>
    </div>
    <div class = "text">
      おはよう
    </div>
  </div> 
  <div class = "message">
    <div class = "name-date">
      <div class = "name">
        Tom
      </div>
      <div class = "date">
        2020/3/31
      </div>
    </div>
    <div class = "text">
      こんばんわ
    </div>
  </div>                   
</div>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>